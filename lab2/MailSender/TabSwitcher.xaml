<UserControl x:Class="MailSender.TabSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSender"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="229" Height="30">
        <StackPanel Orientation="Horizontal" Height="29" Margin="0,0,1,0" HorizontalAlignment="Center">
            <Button Content="Предыдущий" x:Name="btnPrevious" Click="btnPrevious_Click" Margin="0,0,3,0"/>
            <Button Content="Следующий" x:Name="btnNext" Click="btnNext_Click" Width="75"/>
        </StackPanel>
    </Grid>
</UserControl>
